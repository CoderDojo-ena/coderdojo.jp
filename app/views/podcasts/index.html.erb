<% provide(:title, "\##{@title} - #{@description}") %>
<% provide(:desc,  @description) %>
<% provide(:url,   @url ) %>

<img class="dojocast-cover" alt="DojoCast Cover Photo" src="/img/dojocast-cover.jpg" />

<div class="container" style="line-height: 2.2em;">
  <section class="keiyaku" style="padding: 50px 0px 0px 0px;">
    <h1 style="text-align: center;"><%= @title %></h1>
    <p style="text-align: center; padding-bottom: 100px;">CoderDojo コミュニティに関わる方々を<br class="ignore-pc">ハイライトする Podcast です 📻✨</p>

    <h3 id="live" style="text-align: center;">🎙
      最新エピソードを聴く</h3>

    <div class="container" style="line-height: 1.9em; margin-bottom: -100px;">
      <section class="keiyaku" style="padding: 30px 0px 0px 0px;">
	<% if @episodes.first %>
	  <iframe width="100%" height="120" scrolling="no" frameborder="yes"
	   src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= @episodes.first.track_id %>&auto_play=false&buying=false&sharing=false&download=true&show_artwork=false&show_playcount=false&show_user=false">
	  </iframe>
	<% end %>
	<br />
      </section>
    </div>

    <p style="text-align: center; padding-top: 120px; padding-bottom: 30px;">
      <a href="https://twitter.com/intent/tweet?button_hashtag=DojoCast"
       class="twitter-hashtag-button" data-size="large" data-lang="ja"
       data-text="" data-show-count="false">#DojoCast でツイートする</a>
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </p>

    <% if @is_live_scheduled %>
      <p id="live" style="text-align: center; padding: 30px 30px; font-size: 120%;">
	<span>🗓 
	  <b>次回ライブ配信</b><br>
	  <!--<small>決まったら更新します! 😆</small>-->
	</span>
      </p>
      
      <div class="home-point-video">
	<iframe src="https://www.youtube.com/embed/live_stream?channel=UCal5GuoCDCMDQe07w69TuJA"
	 width="560" height="315" frameborder="0" allowfullscreen></iframe>
      </div>
      <p style="text-align: center; padding-top: 10px; padding-bottom: 100px;">
	<a href="https://twitter.com/intent/tweet?button_hashtag=DojoCast"
	 class="twitter-hashtag-button" data-size="large" data-lang="ja"
	 data-text="" data-show-count="false">#DojoCast でツイートする</a>
	<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </p>
    <% end %>

    <h3 id="episodes" style="text-align: center; padding-bottom: 10px;">📻 これまでの収録</h3>
    <ul style="font-size: 120%">
      <% @episodes.each do |episode| %>
	<li><%= link_to episode.title, podcast_path(episode) %></li>
      <% end %>
    </ul>
  </section>

  <section class="introduction text-center list" style="margin-bottom: 30px;">
    <%= render 'shared/social_buttons' %>
  </section>

</div>

<%= render 'shared/introduce_podcast_apps' %>
